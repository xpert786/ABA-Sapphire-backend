				{
					"name": "List Sessions by Treatment Plan ID",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"All sessions belong to treatment plan\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.length > 0) {",
									"        jsonData.forEach(function(session) {",
									"            pm.expect(session.treatment_plan).to.equal(parseInt(pm.environment.get('treatment_plan_id')));",
									"        });",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
